
@{
    ViewBag.Title = "StudentEdit";
}

@model University.Models.Student
<h2>Edits</h2>
<div>
    <form action="" method="post">
        <input type="hidden" name="Id" value="@Model.Id">
        <input type="text" name="Name" class="form-control" placeholder="Enter your name" value="@Model.Name">
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        <input type="datetime" name="DOB" class="form-control" value="@Model.DOB">
        @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
        <input type="text" name="Credit" class="form-control" placeholder="Credit Count" value="@Model.Credit">
        @Html.ValidationMessageFor(model => model.Credit, "", new { @class = "text-danger" })
        <input type="text" name="CGPA" class="form-control" placeholder="CGPA value" value="@Model.CGPA">
        @Html.ValidationMessageFor(model => model.CGPA, "", new { @class = "text-danger" })
        <input type="text" name="Dept_id" class="form-control" placeholder="Your Department Id" value="@Model.Dept_id">
        @Html.ValidationMessageFor(model => model.Dept_id, "", new { @class = "text-danger" })
        <input type="submit" class="btn btn-block" value="Edit" />
    </form>
</div>

