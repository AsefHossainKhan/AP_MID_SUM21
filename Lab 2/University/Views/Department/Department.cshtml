
@{
    ViewBag.Title = "Department";
}

<h2>Department</h2>
@model List<University.Models.Department>

<div class="container">
    <table class="table table-condensed">
        <tr>
            <th>Department Id</th>
            <th>Department Name</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var department in @Model)
        {
        <tr>
            <td>@department.ID</td>
            <td>@department.Name</td>
            @*<td><a class="btn btn-success" href="/Home/StudentEdit/@department.ID">Edit</a></td>*@
            @*<td><a class="btn btn-danger" href="/Home/StudentDelete/@department.ID">Delete</a></td>*@
            <td><a class="btn btn-success" href="">Edit</a></td>
            <td><a class="btn btn-danger" href="">Delete</a></td>
        </tr>
        }

    </table>
</div>
